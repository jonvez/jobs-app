<html>
    <head>
        <title>job-app-client</title>

        <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
        <script src="/javascripts/angularApp.js"></script>

    </head>

    <body ng-app="jobsAppClient">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <ui-view></ui-view>
            </div>
        </div>

        <script type="text/ng-template" id="/home.html">
            <div class="page-header">
                <h1>Acme Co. Job Site</h1>
            </div>
            <p>Thank you for visiting the Acme Co. job site!</p>
            <ul>
                <li><a href="#/user/login">Log in</a> to complete or submit a saved questionnaire</li>
                <li><a href="#/user/register">Register</a> to complete and submit a new questionnaire</li>
                <li><a href="#/submission">Shortcut to submission form</a></li>
                <li><a href="#/admin/questionnaire">Shortcut to questionnaire form</a></li>
            </ul>
        </script>

        <script type="text/ng-template" id="/submission.html">
            <div class="page-header">
                <h1>Questionnaire for {{questionnaire.name}}</h1>
            </div>
            <form ng-submit="saveSubmission()">
                <div ng-repeat="question in questionnaire.questions | orderBy:'sequence'">
                    {{question.sequence}}. {{question.question}}
                    <div class="form-group">
                        <textarea ng-bind="submission.response[question.sequence]" class="form-control"></textarea>

                    </div>
                </div>
            </form>
        </script>

        <script type="text/ng-template" id="/admin/questionnaire.html">
            <div class="page-header">
                <h1>Questionnaires</h1>
            </div>
            <div ng-repeat="questionnaire in questionnaires">
                {{questionnaire.name}}
                <a href="#/admin/questionnaire.html">edit</a>
            </div>
            <form ng-submit="saveSubmission()">
                <div ng-repeat="question in activeQuestionnaire.questions | orderBy:'sequence'">
                    {{question.sequence}}. {{question.question}}
                    <div class="form-group">
                        <textarea ng-bind="submission.response[question.sequence]" class="form-control"></textarea>

                    </div>
                </div>
            </form>
        </script>

    </body>

</html>