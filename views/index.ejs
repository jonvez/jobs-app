<html>
  <head>
    <title>Acme Co. Jobs</title>

    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="http://vitalets.github.io/checklist-model/checklist-model.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>

  <body ng-app="jobsAppClient">
    <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>{{currentUser()}}</a></li>
        <li ng-show="isLoggedIn()"><a href="/#/admin/home">Admin</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/admin/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/admin/register">Register</a></li>
      </ul>
    </nav>
    <div class="page-header">
      <h1>Acme Co. Jobs</h1>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
      </div>
    </div>

    <script type="text/ng-template" id="/home.html">
      <h4>Thank you for visiting the Acme Co. job site!</h4>
      <p>Please enter your email address below so we can locate your questionnaire:</p>
      <form ng-submit="findQuestionnaireByEmail()" style="margin-top: 30px;">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Email" ng-model="email">
        </div>
        <button type="submit" class="btn btn-primary">Find</button>
      </form>
    </script>

    <script type="text/ng-template" id="/adminHome.html">
      <h4>Thank you for visiting the Acme Co. job site!</h4>
      <ul>
        <li ng-show="isLoggedIn()"><a href="#/admin/questions">All questions</a></li>
        <li ng-show="isLoggedIn()"><a href="#/admin/questionnaires">All questionnaires</a></li>
      </ul>
    </script>

    <script type="text/ng-template" id="/questions.html">
      <h1>All Questions</h1>
      <div class="path" style="margin-bottom: 30px;">
        <a href="#/">Home</a>
      </div>
      <div ng-repeat="question in questions">
        {{question.q}} <a href="#/admin/questions/{{question._id}}">edit</a>
      </div>
      <form ng-submit="addQuestion()" style="margin-top: 30px;">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Question" ng-model="question.q">
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
      </form>
    </script>

    <script type="text/ng-template" id="/question.html">
      <h1>Edit Question</h1>
      <div class="path" style="margin-bottom: 30px;">
        <a href="#/admin">Home</a> >
        <a href="#/admin/questions">All Questions</a>
      </div>
      <form ng-submit="saveQuestion()" style="margin-top: 30px;">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Question" ng-model="question.q">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </script>

    <script type="text/ng-template" id="/questionnaires.html">
      <h1>All Questionnaires</h1>
      <div class="path" style="margin-bottom: 30px;">
        <a href="#/">Home</a>
      </div>
      <div ng-repeat="questionnaire in questionnaires">
        {{questionnaire.name}}
        <a href="#/admin/questionnaires/{{questionnaire._id}}">edit</a> |
        <a href="#/admin/questionnaires/{{questionnaire._id}}/response">respond</a> |
      </div>
      <form ng-submit="addQuestionnaire()" style="margin-top: 30px;">
        <h4>Select one or more from the below questions:</h4>
        <div ng-repeat="question in questions">
          <div class="form-group">
            <input type="checkbox" class="form-control" checklist-model="selectedQuestions.questions" checklist-value="question">{{question.q}}
          </div>
        </div>
        <!--<h4>Enter the candidate's name:</h4>-->
        <!--<div class="form-group">-->
          <!--<input type="text" class="form-control" placeholder="Candidate Name" ng-model="questionnaire.candidate.name">-->
        <!--</div>-->
        <!--<h4>Enter the candidate's email address:</h4>-->
        <!--<div class="form-group">-->
          <!--<input type="text" class="form-control" placeholder="Candidate Email" ng-model="questionnaire.candidate.email">-->
        <!--</div>-->
        <button type="submit" class="btn btn-primary">Add</button>
      </form>
    </script>

    <script type="text/ng-template" id="/questionnaire.html">
      <h1>Build and Send a Questionnaire</h1>
      <div class="path" style="margin-bottom: 30px;">
        <a href="#/admin">Home</a> >
        <a href="#/admin/questionnaires">All Questionnaires</a>
      </div>
      <form ng-submit="saveQuestionnaire()" style="margin-top: 30px;">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Candidate Email" ng-model="questionnaire.candidate.email">
        </div>
        <div ng-repeat="question in questions">
          <input type="checkbox" class="form-control" checklist-model="selectedQuestions.questions" checklist-value="question">{{question.q}}
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-primary" ng-click="sendQuestionnaire()">Send to Candidate</button>

      </form>
    </script>

    <script type="text/ng-template" id="/response.html">
      <h1>Complete a Questionnaire</h1>
      <div class="path" style="margin-bottom: 30px;">
        <a href="#/">Home</a> >
      </div>
      <form ng-submit="saveResponse()" style="margin-top: 30px;">
        <h4>Hi {{questionnaire.candidate.name}}.  Please answer the following questions:</h4>

        <div ng-repeat="questionAnswerPair in questionnaire.questionAnswerPairs">
          <p>{{questionAnswerPair.question.q}}</p>
          <textarea class="form-control" ng-model="questionAnswerPair.answer"></textarea>
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Save Progress</button>
        <button type="button" class="btn btn-primary" ng-submit="submitResponse()">Save and Submit</button>
      </form>
    </script>

    <script type="text/ng-template" id="/register.html">
      <div ng-show="error" class="alert alert-danger row">
        <span>{{error.message}}</span>
      </div>
      <form ng-submit="register()" style="margin-top:30px;">
        <h3>Register</h3>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Username" ng-model="user.username">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" placeholder="Password" ng-model="user.password">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </script>

    <script type="text/ng-template" id="/login.html">
      <div ng-show="error" class="alert alert-danger row">
        <span>{{error.message}}</span>
      </div>
      <form ng-submit="logIn()" style="margin-top:30px;">
        <h3>Log In</h3>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Username" ng-model="user.username">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" placeholder="Password" ng-model="user.password">
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </script>

  </body>
</html>